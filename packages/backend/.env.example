# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_SECRET=random_32_char_string
BOT_USERNAME=goldbug_tradingbot

# Privy
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Hyperliquid
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
# Trading asset - use "xyz:GOLD" for trade.xyz GOLD perp, or native perps like "BTC", "ETH"
TRADING_ASSET=xyz:GOLD
# Signer service (Python SDK)
SIGNER_URL=https://signer-production.up.railway.app
# Optional shared key (if set, signer requires X-Signer-Api-Key)
SIGNER_API_KEY=optional_shared_key

# Builder Fees - Earn up to 0.1% on each trade
# Builder address must have at least 100 USDC deposited on Hyperliquid
BUILDER_ADDRESS=0x...your_builder_wallet_address
# Fee in tenths of basis points: 10 = 1bp (0.01%), 100 = 10bp (0.1%)
BUILDER_FEE_BPS=100

# Gas Drip - Send small amount of ETH to users who need gas for bridging
# Fund this wallet with a small amount of ETH on Arbitrum (~$10-50)
GAS_FUNDER_PRIVATE_KEY=0x...private_key_of_gas_funder_wallet
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Security - Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_byte_hex_key

# Database
DATABASE_URL=file:./dev.db

# Server
PORT=3000
NODE_ENV=production

# Mini App URL (for Telegram buttons)
MINIAPP_URL=https://your-miniapp.railway.app

# Onramper - Fiat on/off-ramp (get key from https://onramper.com)
ONRAMPER_API_KEY=pk_prod_...
ONRAMPER_SIGNING_SECRET=your_signing_secret_from_onramper
ONRAMPER_WEBHOOK_SECRET=your_webhook_secret_from_onramper

